# =================================================================
# EDA Workshop Configuration (Example)
# Copy this file to .env and modify as needed
# =================================================================

# Project Configuration
COMPOSE_PROJECT_NAME=eda-workshop
NETWORK_NAME=eda-net

# Container Registry (for CI/CD)
CI_REGISTRY_IMAGE=ghcr.io/yourname/eda-workshop

# =================================================================
# Kafka Configuration
# =================================================================
KAFKA_BROKER=kafka:9092
EVENT_VERSION=v1
EVENT_NS=orders.v1

# =================================================================
# Database Configuration
# =================================================================

# Order Database
ORDER_DB_HOST=order-db
ORDER_DB_PORT=5432
ORDER_DB_NAME=orders
ORDER_DB_USER=orders
ORDER_DB_PASS=orderspw

# Inventory Database
INV_DB_HOST=inventory-db
INV_DB_PORT=5432
INV_DB_NAME=inventory
INV_DB_USER=inventory
INV_DB_PASS=invpw

# Fulfillment Database
FUL_DB_HOST=fulfillment-db
FUL_DB_PORT=5432
FUL_DB_NAME=fulfillment
FUL_DB_USER=fulfillment
FUL_DB_PASS=fulpw

# Analytics Database
ANALYTICS_DB_HOST=analytics-db
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_NAME=analytics
ANALYTICS_DB_USER=analytics
ANALYTICS_DB_PASS=analyticspw

# Notification Database
NOTIFICATION_DB_HOST=notification-db
NOTIFICATION_DB_PORT=5432
NOTIFICATION_DB_NAME=notifications
NOTIFICATION_DB_USER=notifications
NOTIFICATION_DB_PASS=notificationpw

# =================================================================
# Service Ports
# =================================================================
API_GATEWAY_PORT=8080
ORDER_SVC_PORT=8081
INV_SVC_PORT=8082
FUL_SVC_PORT=8083
ANALYTICS_SVC_PORT=8084
NOTIFICATION_SVC_PORT=8085
PAY_ADAPTER_PORT=9090

# =================================================================
# Business Configuration
# =================================================================

# Payment Simulator Settings
PAYMENT_SUCCESS_RATE=90
PAYMENT_DELAY_MIN_MS=100
PAYMENT_DELAY_MAX_MS=500

# Shipping Settings
SHIPPING_PROCESSING_TIME_MIN=2
SHIPPING_PROCESSING_TIME_MAX=8
DELIVERY_SUCCESS_RATE=95

# Analytics Settings
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30

# Notification Settings
EMAIL_ENABLED=true
SMS_ENABLED=false
PUSH_ENABLED=true
EMAIL_DELAY_MS=1000
SMS_DELAY_MS=500

# =================================================================
# Observability (Instana/OpenTelemetry)
# =================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_RESOURCE_ENV=local

# Instana Configuration (when available)
INSTANA_AGENT_ENDPOINT=
INSTANA_AGENT_KEY=
INSTANA_SERVICE_NAME_PREFIX=eda-workshop
